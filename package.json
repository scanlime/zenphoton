{
  "name": "zenphoton",
  "version": "1.0.0",
  "repository": "https://github.com/shuuuuun/zenphoton.git",
  "license": "MIT",
  "engines": {
    "node": ">=4.0.0"
  },
  "scripts": {
    "start": "npm run watch",
    "build": "browserify _src/js/entry.js | uglifyjs > public/js/app.js",
    "build-debug": "browserify _src/js/entry.js -o public/js/app.js",
    "watch": "watchify _src/js/entry.js -o 'uglifyjs > public/js/app.js' --verbose",
    "watch-debug": "watchify _src/js/entry.js -o public/js/app.js --verbose"
  },
  "devDependencies": {
    "browserify": "^13.1.0",
    "coffee-script": "^1.10.0",
    "coffeeify": "^2.0.1",
    "jquery": "^3.1.0",
    "jsmin": "^1.0.1",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      "coffeeify"
    ]
  }
}
